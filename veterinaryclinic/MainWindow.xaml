<Window x:Class="VetClinicApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="СУВК 'Дружок'" Height="700" Width="1000">

    <Window.Resources>
        <Style x:Key="TextBoxWithHint" TargetType="TextBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <Border Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="{TemplateBinding BorderThickness}"/>
                            <ScrollViewer x:Name="PART_ContentHost" Margin="3"/>
                            <TextBlock x:Name="HintText" Text="{TemplateBinding Tag}" 
                                       Foreground="Gray" Margin="5,0" VerticalAlignment="Center"
                                       IsHitTestVisible="False" Visibility="Collapsed"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Text" Value="">
                                <Setter TargetName="HintText" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <TabControl>
            <!-- Вкладка клиентов -->
            <TabItem Header="Клиенты и пациенты">
                <StackPanel Margin="10">
                    <GroupBox Header="Добавить клиента">
                        <StackPanel Margin="5">
                            <TextBox x:Name="txtClientName" Margin="0,5" Tag="ФИО клиента" Style="{StaticResource TextBoxWithHint}"/>
                            <TextBox x:Name="txtClientPhone" Margin="0,5" Tag="Телефон" Style="{StaticResource TextBoxWithHint}"/>
                            <TextBox x:Name="txtClientEmail" Margin="0,5" Tag="Email" Style="{StaticResource TextBoxWithHint}"/>
                            <TextBox x:Name="txtClientAddress" Margin="0,5" Tag="Адрес" Style="{StaticResource TextBoxWithHint}"/>
                            <Button Content="Добавить клиента" Click="AddClient_Click" Margin="0,10"/>
                        </StackPanel>
                    </GroupBox>

                    <GroupBox Header="Добавить пациента">
                        <StackPanel Margin="5">
                            <ComboBox x:Name="cmbClients" Margin="0,5" DisplayMemberPath="FullName"/>
                            <TextBox x:Name="txtPetName" Margin="0,5" Tag="Кличка животного" Style="{StaticResource TextBoxWithHint}"/>
                            <TextBox x:Name="txtPetSpecies" Margin="0,5" Tag="Вид животного" Style="{StaticResource TextBoxWithHint}"/>
                            <TextBox x:Name="txtPetBreed" Margin="0,5" Tag="Порода" Style="{StaticResource TextBoxWithHint}"/>
                            <TextBox x:Name="txtPetAge" Margin="0,5" Tag="Возраст" Style="{StaticResource TextBoxWithHint}"/>
                            <TextBox x:Name="txtPetMedicalHistory" Margin="0,5" Tag="История болезней" Style="{StaticResource TextBoxWithHint}" Height="60" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPetVaccinations" Margin="0,5" Tag="Прививки" Style="{StaticResource TextBoxWithHint}" Height="60" TextWrapping="Wrap"/>
                            <Button Content="Добавить пациента" Click="AddPet_Click" Margin="0,10"/>
                        </StackPanel>
                    </GroupBox>

                    <DataGrid x:Name="clientsGrid" Margin="0,10" AutoGenerateColumns="False" SelectionChanged="ClientsGrid_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ФИО" Binding="{Binding FullName}" Width="*"/>
                            <DataGridTextColumn Header="Телефон" Binding="{Binding Phone}" Width="150"/>
                            <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="200"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <DataGrid x:Name="petsGrid" Margin="0,10" AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Кличка" Binding="{Binding Name}" Width="100"/>
                            <DataGridTextColumn Header="Вид" Binding="{Binding Species}" Width="100"/>
                            <DataGridTextColumn Header="Порода" Binding="{Binding Breed}" Width="100"/>
                            <DataGridTextColumn Header="Возраст" Binding="{Binding Age}" Width="80"/>
                            <DataGridTextColumn Header="История болезней" Binding="{Binding MedicalHistory}" Width="200"/>
                            <DataGridTextColumn Header="Прививки" Binding="{Binding Vaccinations}" Width="200"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </TabItem>

            <!-- Вкладка записи на прием -->
            <TabItem Header="Запись на прием" Height="22" Margin="-2,-2,-2,0" VerticalAlignment="Top">
                <StackPanel Margin="10">
                    <GroupBox Header="Новая запись">
                        <StackPanel Margin="5">
                            <DatePicker x:Name="dpAppointmentDate" Margin="0,5"/>
                            <ComboBox x:Name="cmbAppointmentTime" Margin="0,5">
                                <ComboBoxItem>09:00</ComboBoxItem>
                                <ComboBoxItem>10:00</ComboBoxItem>
                                <ComboBoxItem>11:00</ComboBoxItem>
                                <ComboBoxItem>12:00</ComboBoxItem>
                                <ComboBoxItem>13:00</ComboBoxItem>
                                <ComboBoxItem>14:00</ComboBoxItem>
                                <ComboBoxItem>15:00</ComboBoxItem>
                                <ComboBoxItem>16:00</ComboBoxItem>
                                <ComboBoxItem>17:00</ComboBoxItem>
                                <ComboBoxItem>18:00</ComboBoxItem>
                            </ComboBox>
                            <ComboBox x:Name="cmbAppointmentClient" Margin="0,5" DisplayMemberPath="FullName"/>
                            <ComboBox x:Name="cmbAppointmentPet" Margin="0,5" DisplayMemberPath="Name"/>
                            <ComboBox x:Name="cmbAppointmentService" Margin="0,5" DisplayMemberPath="Name"/>
                            <TextBox x:Name="txtAppointmentNotes" Margin="0,5" Tag="Примечания" Style="{StaticResource TextBoxWithHint}" Height="60" TextWrapping="Wrap"/>
                            <Button Content="Записать на прием" Click="AddAppointment_Click" Margin="0,10"/>
                        </StackPanel>
                    </GroupBox>

                    <DataGrid x:Name="appointmentsGrid" Margin="0,10" AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Дата и время" Binding="{Binding DateTime}" Width="150"/>
                            <DataGridTextColumn Header="Клиент" Binding="{Binding Client.FullName}" Width="150"/>
                            <DataGridTextColumn Header="Питомец" Binding="{Binding Pet.Name}" Width="100"/>
                            <DataGridTextColumn Header="Услуга" Binding="{Binding Service.Name}" Width="150"/>
                            <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="100"/>
                            <DataGridTextColumn Header="Примечания" Binding="{Binding Notes}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </TabItem>

            <!-- Вкладка услуг -->
            <TabItem Header="Услуги">
                <StackPanel Margin="10">
                    <GroupBox Header="Добавить услугу">
                        <StackPanel Margin="5">
                            <TextBox x:Name="txtServiceName" Margin="0,5" Tag="Название услуги" Style="{StaticResource TextBoxWithHint}"/>
                            <TextBox x:Name="txtServiceDescription" Margin="0,5" Tag="Описание" Style="{StaticResource TextBoxWithHint}" Height="60" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtServicePrice" Margin="0,5" Tag="Цена" Style="{StaticResource TextBoxWithHint}"/>
                            <Button Content="Добавить услугу" Click="AddService_Click" Margin="0,10"/>
                        </StackPanel>
                    </GroupBox>

                    <DataGrid x:Name="servicesGrid" Margin="0,10" AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Услуга" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="Описание" Binding="{Binding Description}" Width="300"/>
                            <DataGridTextColumn Header="Цена" Binding="{Binding Price}" Width="100"/>
                            <DataGridTextColumn Header="Длительность" Binding="{Binding Duration}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </TabItem>

            <!-- Вкладка сотрудников -->
            <TabItem Header="Сотрудники">
                <StackPanel Margin="10">
                    <GroupBox Header="Добавить сотрудника">
                        <StackPanel Margin="5">
                            <TextBox x:Name="txtEmployeeName" Margin="0,5" Tag="ФИО сотрудника" Style="{StaticResource TextBoxWithHint}"/>
                            <ComboBox x:Name="cmbEmployeePosition" Margin="0,5">
                                <ComboBoxItem>Ветеринар</ComboBoxItem>
                                <ComboBoxItem>Администратор</ComboBoxItem>
                            </ComboBox>
                            <TextBox x:Name="txtEmployeePhone" Margin="0,5" Tag="Телефон" Style="{StaticResource TextBoxWithHint}"/>
                            <TextBox x:Name="txtEmployeeEmail" Margin="0,5" Tag="Email" Style="{StaticResource TextBoxWithHint}"/>
                            <TextBox x:Name="txtEmployeeLogin" Margin="0,5" Tag="Логин" Style="{StaticResource TextBoxWithHint}"/>
                            <PasswordBox x:Name="txtEmployeePassword" Margin="0,5"/>
                            <Button Content="Добавить сотрудника" Click="AddEmployee_Click" Margin="0,10"/>
                        </StackPanel>
                    </GroupBox>

                    <DataGrid x:Name="employeesGrid" Margin="0,10" AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ФИО" Binding="{Binding FullName}" Width="*"/>
                            <DataGridTextColumn Header="Должность" Binding="{Binding Position}" Width="150"/>
                            <DataGridTextColumn Header="Телефон" Binding="{Binding Phone}" Width="150"/>
                            <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="200"/>
                            <DataGridTextColumn Header="Уровень доступа" Binding="{Binding AccessLevel}" Width="150"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>